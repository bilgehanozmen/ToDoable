@model IEnumerable<ToDoable.Models.ToDoItem>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-7">
        <ejs-grid id="todoitems" dataSource="@Model" gridLines="None"
                  allowSorting="true" allowPaging="true">
            <e-grid-pagesettings pageSize="5"></e-grid-pagesettings>
            <e-grid-columns>
                <e-grid-column headerText="Task" field="TitleWithIcon"></e-grid-column>
                <e-grid-column headerText="Description" template="#typeColumnTemplate" width="150px"></e-grid-column>
                <e-grid-column headerText="Date" field="Date" width="110px" type="date" textAlign="Left"></e-grid-column>
                <e-grid-column headerText="Description" template="#typeColumnTemplate" width="150px"></e-grid-column>
            </e-grid-columns>
        </ejs-grid>
    </div>
    
</div>
<script id="actionColumnTemplate" type="text/x-template">
    <div class="d-flex flex-row justify-content-start">
        <a class="btn btn-sm no-a-decoration" href="/ToDoItem/AddOrEdit/${ToDoItemId}">
            <i class="fa-solid fa-pen fa-lg"></i>
        </a>
        <form action="/ToDoItem/Delete/${ToDoItemId}" method="post">
            @Html.AntiForgeryToken()
            <button type="submit" class="btn btn-sm btn-link no-a-decoration"
            onclick="return confirm(&quot;Are sure to delete this record?&quot;)">
                <i class="fa-solid fa-trash-can fa-lg text-danger"></i>
            </button>
        </form>
    </div>
</script>