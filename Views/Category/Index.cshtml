@model IEnumerable<ToDoable.Models.Category>

@{
    ViewData["PageTitle"] = "Categories";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-7">
        <ejs-grid id="Categories" dataSource="Model">
            <e-grid-columns>
                <e-grid-column headerText="Category" field="Name"></e-grid-column>
                <e-grid-column headerText="Description" field="Description"></e-grid-column>
                <e-grid-column headerText="Color" field="Color"></e-grid-column>
            </e-grid-columns>
        </ejs-grid>
    </div>
</div>